{
    // 在檔案總管側邊欄隱藏 __pycache__ 或你那個 pyache 資料夾
    "files.exclude": {
      "**/__pycache__": true,
      "**/pyache":      true,
      "**/polydiff.egg-info": true
    },
    // 在全域搜尋時也排除它們
    "search.exclude": {
      "**/__pycache__": true,
      "**/pyache":      true,
      // "**/.git/objects/**": true,
      // "**/.git/subtree-cache/**": true
    },
    "python.testing.pytestArgs": [
      "test"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
  }
  